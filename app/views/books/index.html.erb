<div>
    <%= flash[:notice] %>
</div>


<div class="index">
 <h1>Books</h1>

     <table>
      <thead>
       <tr>
        <th><div class="karam1">Title</div></th>
        <th><div class="karam2">Body</div></th>
        <th colspan="3"></div></th>
       </tr>
      </thead>

   <tbody>
    <% @books.each do |book| %>
      <tr>

       <td><div class="title"><%= book.title %></div></td>


       <td><div class="body"><%= book.body %></div></td>

       <td><div class="link1"><%= link_to "show", book_path(book.id) %></div></td>
       <td><div class="link2"><%= link_to "edit", edit_book_path(book.id) %></div></td>
       <td><div class="link2"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></div></td>
      </tr>

    <% end %>


   </tbody>



  </table>



  <h1>New book</h1>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>erros prohiblited this book from being saved:
    <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
    </ul>
  <% end %>


<%= form_with model: @book do |f| %>

 <p>Title</p>
 <%= f.text_field :title %>

 <p>Body</p>
 <%= f.text_area :body %>

 <p><%= f.submit 'Create book' %></p>


<% end %>

</div>