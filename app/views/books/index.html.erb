<h1>Books</h1>

<% @books.each do |book| %>

  <p>Title<p>
  <span><%= book.title %></span>

  <p>Body</p>
  <span><%= book.body %></span>

  <h1>New book</h1>
  
  <% end %>

<%= form_with model: @book do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create book' %>


<% end %>